<UserControl x:Class="WPFCalculator.View.UserControls.Key"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPFCalculator.View.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="100">
    <Grid>
        <Button x:Name="buttonLocal"  VerticalContentAlignment="Center" Margin="5" Background="#FF969696" Click="buttonLocal_Click"/>
        <TextBlock x:Name="textLocal" Text="{Binding Placeholder}" VerticalAlignment="Center" HorizontalAlignment="Center" FontWeight="Light"/>
    </Grid>
</UserControl>
