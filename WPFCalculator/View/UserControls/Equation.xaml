<UserControl x:Class="WPFCalculator.View.UserControls.Equation"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPFCalculator.View.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="20*"/>
                <ColumnDefinition Width="80*"/>
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>

                </Grid.RowDefinitions>
                <Button x:Name="quadraticButton" Content="Solve Quadratic" Grid.Row="0" FontSize="16"/>
                <Button x:Name="cubicButton" Content="Solve Cubic" Grid.Row="1" FontSize="16"/>
                <Button x:Name="quarticButton" Content="Solve Quartic" Grid.Row="2" FontSize="16"/>


            </Grid>
        </Grid>
    </Grid>
</UserControl>
